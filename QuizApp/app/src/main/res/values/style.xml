<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScreenHome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Text_Quiz">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
    </style>

<!--    phim start-->
    <style name="btn_start">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">20dp</item>

    </style>
    <style name="Widget.Button" parent="android:Widget">
        <item name="android:background">@drawable/button_pressed</item>
    </style>

    <style name="custom_check_box">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:width">380dp</item>
        <item name="android:button">@drawable/custom_check_box</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>